extends layout

block content
  h1 #{title}
  
  h2 
     a(href="https://github.com/joebertj/rest") Github
  
  p 
    a(href="users") View users
  p
    a(href="add") Add user

  h3 Columns
  ul
    li _id: autogenerated
    li name
    li pro
    li id: user-defined primary key

  p(style=" color: red") #{message}
  
  h3 ReST API
  table
     tr
       th Method 
       th Action
       th Content
     tr
       td GET
       td /users
       td none
     tr
       td GET
       td /edit
       td id,name,pro
     tr
       td POST
       td /add
       td JSON
     tr
       td DELETE
       td /:id
       td none
     tr
       td PUT
       td /:id
       td JSON
